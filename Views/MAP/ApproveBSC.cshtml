
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PHEDServeLayoutPage.cshtml";
}


<link href="~/Scripts/bootstrap-datatable/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<link href="~/Scripts/bootstrap-datatable/css/buttons.bootstrap4.min.css" rel="stylesheet" />
<link href="~/Scripts/bootstrap-datatable/css/dataTables.custom.css" rel="stylesheet" />
<div class="card">
    <div class="card-header">
        <h4 class="card-title">
            Approval By BSC
        </h4>
    </div>

    <div class="card-body">
       <div class="row">
           <div class="col-md-12">
               <div class="dataTables_wrapper container-fluid dt-bootstrap4">
                   <div class="row">
                       <div class="col-md-3 form-group">
                           <label>Payment</label>
                           <select name="AccountpaidFrom" class="custom-select" id="inputGroupSelect01" data-live-search="true" data-live-search-placeholder="Search" data-actions-box="true" data-bind="options: PaymentStatusList, selectedOptions: SelectedPaymentStatus, optionsText: 'PaymentStatusName',optionValue: 'PaymentStatus,Name', value: SelectedPaymentStatus,  valueUpdate:'change',optionsCaption: 'Select Payment Status' "></select>
                       </div>
                       <div class="col-md-3 form-group">
                           <label>Zone</label>
                           <select name="AccountpaidFrom" class="custom-select" id="inputGroupSelect01" data-live-search="true" data-live-search-placeholder="Search" data-actions-box="true" data-bind="options: ApprovalList, selectedOptions: SelectedIBC, optionsText: 'ApprovalName',optionValue: 'ApprovalName', value: SelectedIBC,  valueUpdate:'change',optionsCaption: 'Select Approval' "></select>
                       </div>
                       <div class="col-md-3 form-group">
                           <label>Feeder</label>
                           <select name="AccountpaidFrom" class="custom-select" id="inputGroupSelect01" data-live-search="true" data-live-search-placeholder="Search" data-actions-box="true" data-bind="options: ApprovalList, selectedOptions: SelectedBSC, optionsText: 'ApprovalName',optionValue: 'ApprovalName', value: SelectedBSC,  valueUpdate:'change',optionsCaption: 'Select Approval' "></select>
                       </div>
                       <div class="col-md-3 form-group">
                           <label>Phase</label>
                           <select name="AccountpaidFrom" class="custom-select" id="inputGroupSelect01" data-live-search="true" data-live-search-placeholder="Search" data-actions-box="true" data-bind="options: PhaseList, selectedOptions: SelectedPhase, optionsText: 'PhaseName',optionValue: 'PhaseName', value: SelectedPhase,  valueUpdate:'change',optionsCaption: 'Select Meter Phase' "></select>
                       </div>
                       <div class="col-md-12">
                           <hr />
                           <div class="form-group" style="overflow: hidden;">
                               <button style="float: right" type="submit" class="btn btn-primary center-block" data-bind="click:fetchCustomerPaymentInfo">View</button>
                           </div>
                        </div>
                   </div>

                   <div data-bind="if: PaymentList() < 1"><span style=" display: block; text-align: center; font-size: 15px; background: #eff4f8; padding: 10px; border-radius: 4px; " data-bind="text: message"></span></div>
       </div>
           </div>
           </div>
        <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table data-bind="if: PaymentList().length >= 1" id="customer_payment_info" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>S/No</th>
                            <th>AccountNo</th>
                            <th>MeterNo</th>
                            <th>Address</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- ko foreach: PaymentList() -->
                        <tr>
                            <td><span data-bind="text:$index() +1"></span></td>
                            <td><span data-bind="text: 'text'"></span></td>
                            <td><span data-bind="text: 'text'"></span></td>
                            <td><span data-bind="text: CustomerAddress"></span></td>
                            <td><button class="btn btn-block btn-primary">Approve</button></td>
                        </tr>
                        <!-- /ko -->
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>S/No</th>
                            <th>AccountNo</th>
                            <th>MeterNo</th>
                            <th>Address</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
        </div>
    </div>
</div>
