<script>

    ko.bindingHandlers.Date = {
        update: function (element, valueAccessor) {
            var value = valueAccessor();
            var date = moment(value());
            var strDate = date.format("LL");
            $(element).text(strDate);
        }
    };


</script>


<script type="text/javascript">

    function AddFileTo(d) {
        console.log(d.TicketId);

        alert("Yes");
    }

    $(document).ready(function () {
        showloader();

        $.ajax({
            url: '/PHEDConnect/LoadIndexPage',
            type: 'GET',
            dataType: 'JSON',

            success: function (result) {
                var data = JSON.parse(result);
                console.log("Data From Server " + JSON.stringify(data));
                AllCustomerPaymentViewModel = new PHEDConnectViewModel(data);
                ko.applyBindings(AllCustomerPaymentViewModel);
                hideloader();
            },
            error: function (result) {
                hideloader();
                alert("Failed" + result.responseText);
            }
        });
    });
</script>

<script>

    function hideloader() {

        swal.close();
    }
    function showloader() {
        swal({
            title: "Verifying...",
            text: "Please wait while we upload your account details",
            imageUrl: 'http://phedpayments.nepamsonline.com/images/loader4.gif',
            showConfirmButton: false,
            allowOutsideClick: false
        });
    };

</script>

