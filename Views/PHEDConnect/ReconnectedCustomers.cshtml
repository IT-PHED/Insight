@{
    ViewBag.Title = "ReconnectedCustomers";
    Layout = "~/Views/Shared/_PHEDServeLayoutPage.cshtml";
}




<link href="~/Scripts/bootstrap-datatable/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<link href="~/Scripts/bootstrap-datatable/css/buttons.bootstrap4.min.css" rel="stylesheet" />
<link href="~/Scripts/bootstrap-datatable/css/dataTables.custom.css" rel="stylesheet" />
<link href="~/assets/css/AMRCustomCSS/custom.min.css" rel="stylesheet" />
<div class="card">
    <div class="card-header">
        <h4 class="card-title">
           Reconnected Customers
        </h4>
    </div>

    <div class="card-body">
        <div class="row">


            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="dashboard_graph">


                    <div class="row tile_count">
                        <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count" style="align-content:center">
                            <span class="count_top"><i class="fa fa-clock-o"></i> Number of Disconnected </span>
                            <div class="count blue" data-bind="text:RCDCStatData.DisconnectedCustomers">1,598</div>
                            <span class="count_bottom"><i class="green"><i class="fa fa-sort-asc"></i> </i>PHED Customers</span>
                        </div>

                        <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count" style="align-content:center">
                            <span class="count_top"><i class="fa fa-clock-o"></i>Number of  Reconnected</span>
                            <div class="count blue" data-bind="text:RCDCStatData.ReconnectedCustomers">798</div>
                            <span class="count_bottom"><i class="green"><i class="fa fa-sort-asc"></i> </i>PHED Customers</span>
                        </div>

                        <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
                            <span class="count_top"><i class="fa fa-user"></i> Number of Customers </span>
                            <div class="count green" data-bind="text:RCDCStatData.PendingForCustomer">433</div>
                            <span class="count_bottom"><i class="green"><i class="fa fa-sort-asc"></i></i>Pending for Reconnection </span>
                        </div>

                        <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
                            <span class="count_top"><i class="fa fa-user"></i> Number of Disconnected </span>
                            <div class="count green" data-bind="text:RCDCStatData.DisconnectedPOSTPAID">433</div>
                            <span class="count_bottom"><i class="green"><i class="fa fa-sort-asc"></i></i> Postpaid Customers </span>
                        </div>

                        <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
                            <span class="count_top"><i class="fa fa-user"></i> Number of Disconnected </span>
                            <div class="count green" data-bind="text:RCDCStatData.DisconnectedPREPAID">433</div>
                            <span class="count_bottom"><i class="green"><i class="fa fa-sort-asc"></i></i> Prepaid Customers </span>
                        </div>

                        <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
                            <span class="count_top"><i class="fa fa-user"></i> %age Success with</span>
                            <div class="count blue" data-bind="text:RCDCStatData.PercentageSuccess">66% </div>
                            <span class="count_bottom"><i class="green"><i class="fa fa-sort-asc"></i></i>Reconnection & Disconnection </span>
                        </div>

                    </div>
                </div>
            </div>


            <div class="col-md-12">
                <hr />
                <div class="dataTables_wrapper container-fluid dt-bootstrap4">
                    <div class="row">


                        <div class="col-md-3 form-group">
                            <label>Zone</label>
                            <select name="AccountpaidFrom" class="custom-select" id="inputGroupSelect01" data-live-search="true" data-live-search-placeholder="Search" data-actions-box="true" data-bind="options: IBCList, selectedOptions: SelectedIBC, optionsText: 'IBCName',optionValue: 'IBCId', value: SelectedIBC,  valueUpdate:'change',optionsCaption: 'Select Zone',event:{change: filterBSCFromIBC} "></select>
                        </div>
                        <div class="col-md-3 form-group">
                            <label>Feeder</label>
                            <select name="AccountpaidFrom" class="custom-select" id="inputGroupSelect01" data-live-search="true" data-live-search-placeholder="Search" data-actions-box="true" data-bind="options: filteredBSCList, selectedOptions: SelectedBSC, optionsText: 'BSCName',optionValue: 'BSCId', value: SelectedBSC,  valueUpdate:'change',optionsCaption: 'Select Feeder'"></select>
                        </div>

                        <div class="col-md-3 form-group">
                            <label>Status</label>

                            <select class="custom-select" data-bind="value:Category">
                                <option>--Select Category--</option>
                                <option>RECONNECTED</option>

                            </select>
                        </div>

                        <div class="col-md-3 form-group">
                            <label>Account Type</label>
                            <select class="custom-select" data-bind="value:AccountType">
                                <option>--Select Mode--</option>
                                <option>ALL ACCOUNTS</option>
                                <option>POSTPAID</option>
                                <option>PREPAID</option>
                            </select>
                        </div>

                        <div class="col-md-12">
                            <hr />
                            <div class="form-group" style="overflow: hidden;">
                                <button style="float: right" type="submit" class="btn btn-primary center-block" data-bind="click:DisconnectedCustomers">Process Action</button>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />


                <div class="table-responsive">
                    <table data-bind="if: DisconnectionList().length >= 1" id="EbillsDatatable" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>S/N</th>
                                <th>AccountNo</th>
                                <th>AccountName</th>
                                <th>Address</th>
                                <th>Arrears</th>
                                <th>Date Reconnected</th>
                                <th>Phone</th>
                                <th>Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!--ko foreach:DisconnectionList() -->
                            <tr>
                                <td><span data-bind="text:$index() +1"></span></td>
                                <td><span data-bind="text: AccountNo"></span></td>
                                <td><span data-bind="text: AccountName"></span></td>
                                <td><span data-bind="text: Address"></span></td>
                                <td><span data-bind="text: Arrears"></span></td>
                                <td><span data-bind="Date: DateReconnected"></span></td>
                                <td><span data-bind="text: CustomerPhone"></span></td>
                                <td><span data-bind="text: CustomerEmail"></span></td>
                            </tr>

                            <!--/ko-->

                        </tbody>
                        <tfoot>
                            <tr>
                                <th>S/N</th>
                                <th>AccountNo</th>
                                <th>AccountName</th>
                                <th>Address</th>
                                <th>Arrears</th>
                                <th>Date Reconnected</th>
                                <th>Phone</th>
                                <th>Email</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>


            </div>
        </div>

    </div>

</div>
