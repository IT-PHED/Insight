@{
    ViewBag.Title = "Capture Meters";
    Layout = "~/Views/Shared/_PHEDServeLayoutPage.cshtml";
}


<link href="~/Scripts/bootstrap-datatable/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<link href="~/Scripts/bootstrap-datatable/css/buttons.bootstrap4.min.css" rel="stylesheet" />
<link href="~/Scripts/bootstrap-datatable/css/dataTables.custom.css" rel="stylesheet" />
<div class="card">
    <div class="card-header">
        <h4 class="card-title">
           Approve Installed Meters
        </h4>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <div class="dataTables_wrapper container-fluid dt-bootstrap4">
                    <div class="row">

                        <div class="col-md-4 form-group">
                            <label>IBC</label>
                            <select name="AccountpaidFrom" class="custom-select" id="inputGroupSelect01" data-live-search="true" data-live-search-placeholder="Search" data-actions-box="true" data-bind="options: IBCList, selectedOptions: SelectedIBC, optionsText: 'IBCName',optionValue: 'IBCName', value: SelectedIBC,  valueUpdate:'change',optionsCaption: 'Select Approval',event:{change: filterBSCFromIBC} "></select>
                        </div>
                        <div class="col-md-4 form-group">
                            <label>BSC</label>
                            <select name="AccountpaidFrom" class="custom-select" id="inputGroupSelect01" data-live-search="true" data-live-search-placeholder="Search" data-actions-box="true" data-bind="options: filteredBSCList, selectedOptions: SelectedBSC, optionsText: 'BSCName',optionValue: 'BSCName', value: SelectedBSC,  valueUpdate:'change',optionsCaption: 'Select Approval'"></select>
                        </div>

                        <div class="col-md-4 form-group">
                            <label>Status</label>
                            <select name="AccountpaidFrom" class="custom-select" id="inputGroupSelect01" data-live-search="true" data-live-search-placeholder="Search" data-actions-box="true" data-bind="options: MAPStatusList, selectedOptions: SelectedPaymentStatus, optionsText: 'StatusName',optionValue: 'StatusName', value: SelectedPaymentStatus,  valueUpdate:'change',optionsCaption: 'Select Payment Status' "></select>
                        </div>

                        @*<div class="col-md-3 form-group">
                                <label>Phase</label>
                                <select name="AccountpaidFrom" class="custom-select" id="inputGroupSelect01" data-live-search="true" data-live-search-placeholder="Search" data-actions-box="true" data-bind="options: PhaseList, selectedOptions: SelectedPhase, optionsText: 'PhaseName',optionValue: 'PhaseName', value: SelectedPhase,  valueUpdate:'change',optionsCaption: 'Select Meter Phase' "></select>
                            </div>*@
                        <div class="col-md-12">
                            <hr />
                            <div class="form-group" style="overflow: hidden;">
                                <button style="float: right" type="submit" class="btn btn-primary center-block" data-bind="click:fetchCustomerPaymentInfo">View</button>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" id="HiddenStatus" value="MAPAPPLIED" />
                    <div data-bind="if: PaymentList() < 1"><span style=" display: block; text-align: center; font-size: 15px; background: #eff4f8; padding: 10px; border-radius: 4px; " data-bind="text: message"></span></div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table data-bind="if: PaymentList().length >= 1" id="customer_payment_info" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>S/No</th>
                                <th>TicketNo</th>
                                <th>Installer Name</th>
                             <th>AccountNo</th>
                                <th>Phase</th>
                                <th>Install Date</th>
                                <th>Meter No.</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- ko foreach: PaymentList() -->
                            <tr>
                                <td><span data-bind="text:$index() +1"></span></td>
                                <td style="cursor:pointer" data-bind="click:function () { $root.ViewCustomersData($data); }"><span data-bind="text: TransactionID"></span></td>
                                <td><span data-bind="text: MAPCustomerName"></span></td>
                                <td><span data-bind="text: CustomerReference"></span></td>
                                <td><span data-bind="text: MeterPhase"></span></td>
                                <td><span data-bind="text: TransactionProcessDate"></span></td>
                                <td><span data-bind="text: AlternateCustReference"></span></td>

                                <td><button data-bind="click:function () { $root.ApproveInstalledMeter($data); }" class="btn btn-block btn-primary">Approve</button></td>
                            </tr>
                            <!-- /ko -->
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>S/No</th>
                                <th>TicketNo</th>
                                <th>Name</th>
                                <th>AccountNo</th>
                                <th>Phase</th>
                                <th>Date</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="largeModal1" tabindex="-1" role="dialog" aria-labelledby="largeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="largeModalLabel">Approval and Pre-Installation Check for Ticket Id ~ <span id="ModalTicketId"></span></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <input type="hidden" id="TicketIDHidden" value="" />
                <div class="modal-body">
                    <div class="row" id="customer_details">

                        <div class="col-md-12">
                            <div class="table-responsive">
                                <table id="customer_payment_info" class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>S/No</th>
                                            <th>Item</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>1</td>
                                            <td>Has Network Been Checked?</td>
                                            <td>
                                                <select class="form-control">
                                                    <option>-Select-</option>
                                                    <option>Yes</option>
                                                    <option>No</option>
                                                </select>
                                            </td>
                                        </tr>

                                        <tr>
                                            <td>2</td>
                                            <td>Is the Customer's area Meterable?</td>
                                            <td>
                                                <select class="form-control">
                                                    <option>-Select-</option>
                                                    <option>Yes</option>
                                                    <option>No</option>
                                                </select>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                        </div>

                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group" style="margin-top: 5px;">
                                <hr />
                                <label><strong>Comment</strong></label>
                                <textarea class="form-control" placeholder="Wrire Comment Here" data-bind="value: ApprovePaymentComment"></textarea>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" data-bind="click:function () { $root.ApproveUpfrontPaymentDB($data); }">Approve</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="largeModal" tabindex="-1" role="dialog" aria-labelledby="largeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="largeModalLabel">Ticket Id ~ <span id="ModalTicketId"></span></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row" id="customer_details">


                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group" style="margin-top: 5px;">
                                <hr />
                                <label><strong>Comment</strong></label>
                                <textarea class="form-control" placeholder="Wrire Comment Here" data-bind="value: ApprovePaymentComment"></textarea>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" data-bind="click:function () { $root.ApprovePayment($data); }">Approve</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-1.10.2.js"></script>
