
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PHEDServeLayoutPage.cshtml";
}


<link href="~/Scripts/bootstrap-datatable/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<link href="~/Scripts/bootstrap-datatable/css/buttons.bootstrap4.min.css" rel="stylesheet" />
<link href="~/Scripts/bootstrap-datatable/css/dataTables.custom.css" rel="stylesheet" />
<div class="card">
    <div class="card-header">
        <h4 class="card-title">
            Customer Payment Info
        </h4>
    </div>

    <div class="card-body">
       <div class="row">
           <div class="col-md-12">
               <div class="dataTables_wrapper container-fluid dt-bootstrap4">
                   <div class="row">
                       <div class="col-md-5 form-group">
                           <label>From</label>
                           <input type="text" class="datepicker form-control" placeholder="Select From Date" data-bind="value:fromDate">
                       </div>
                       <div class="col-md-5 form-group">
                           <label>To</label>
                           <input type="text" class="datepicker form-control" placeholder="Select To Date" data-bind="value:toDate">
                       </div>
                       <div class="col-md-2 form-group">
                           <label>&nbsp;</label>
                           <button data-bind="click:fetchCustomerPaymentInfo" class="btn btn-block btn-primary">View</button>
                       </div>
                   </div>
                   <div data-bind="if: PaymentList() < 1"><span style=" display: block; text-align: center; font-size: 15px; background: #eff4f8; padding: 10px; border-radius: 4px; " data-bind="text: message"></span></div>
              
               
               
                   
               
               
               
               
               
                </div>
           </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table data-bind="if: PaymentList().length >= 1" id="customer_payment_info" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>S/No</th>
                                <th>TicketID</th>
                                <th>MeterNo</th>
                                <th>Address</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- ko foreach: PaymentList() -->
                            <tr>
                                <td><span data-bind="text:$index() +1"></span></td>
                                <td><span data-bind="text: TransactionID"></span></td>
                                <td><span data-bind="text: 'text'"></span></td>
                                <td><span data-bind="text: CustomerAddress"></span></td>
                                <td><button class="btn btn-block btn-primary">Approve</button></td>
                            </tr>
                            <!-- /ko -->
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>S/No</th>
                                <th>AccountNo</th>
                                <th>MeterNo</th>
                                <th>Address</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

