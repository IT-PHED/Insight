@using PHEDServe.Models;

@using Microsoft.AspNet.Identity
@model PHEDServe.Models.ManageUserViewModel

@*<p>You're logged in as <strong>@User.Identity.GetUserName()</strong>.</p>*@




@{
    ViewBag.Title = "Manage Account"; Layout = "~/Views/Shared/_PHEDServeLayoutPageAMR.cshtml";
}



<p class="text-success">@ViewBag.StatusMessage</p>





<div class="card">
    <div class="card-header">
        <h4 class="card-title">Change Password</h4>
    </div>
    <div class="card-body">

        <div class="panel registration-form">
            <div class="panel-body">

                <section class="panel panel-default">
                    @using (Html.BeginForm("ManageMD", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {

                        <div class="row">

                            <div class="card-body">
                                <div class="panel registration-form">
                                    <div class="panel-body">

                                        <section class="panel panel-default">

                                            <div class="col-md-8 offset-2" >

                                                @Html.AntiForgeryToken()
 
                                                @Html.ValidationSummary()
                                                <div class="form-group">
                                                    @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-2 control-label" })
                                                    <div class="col-md-10">
                                                        @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-2 control-label" })
                                                    <div class="col-md-10">
                                                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", @placeholder = "Please enter a minimum of 6 Characters" })
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                                                    <div class="col-md-10">
                                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Please enter a minimum of 6 Characters" })
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <div class="col-md-offset-2 col-md-10">
                                                        <input type="submit" value="Change password" class="btn btn-success" />
                                                    </div>
                                                </div>

                                            </div>
                                        </section>

                                    </div>
                                </div>
                            </div>

                        </div>
                    }


                    </section>
                    </div>
        </div>
    </div>
</div>
















                   




